<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.p2pfileshare.controller.ChangeNameController"
      spacing="15" alignment="CENTER_LEFT"
      style="-fx-background-color: white; -fx-pref-width: 400px;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <children>
        <HBox spacing="15" alignment="CENTER_LEFT">
            <children>
                <Label text="✏️" style="-fx-font-size: 32px;" />

                <VBox spacing="2">
                    <Label text="Đổi tên hiển thị" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                    <Label text="Tên này sẽ hiển thị cho mọi người trong mạng LAN." style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;" wrapText="true"/>
                </VBox>
            </children>
        </HBox>

        <VBox spacing="5">
            <Label text="Tên mới:" style="-fx-font-weight: bold; -fx-text-fill: #34495e;" />
            <TextField fx:id="nameField" promptText="Nhập tên của bạn..." style="-fx-background-radius: 5; -fx-padding: 8; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
        </VBox>

        <Separator />

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <children>
                <Button text="Hủy bỏ" onAction="#onCancel"
                        style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5; -fx-text-fill: #7f8c8d; -fx-cursor: hand; -fx-padding: 6 15;" />
                <Button text="Lưu thay đổi" onAction="#onSave" defaultButton="true"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand; -fx-padding: 6 15;" />
            </children>
        </HBox>
    </children>
</VBox>