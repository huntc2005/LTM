<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.p2pfileshare.controller.PeerTabController"
            style="-fx-background-color: #EBE1D1;">

    <HBox spacing="15" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">

        <!-- Sidebar dọc -->
        <VBox spacing="15" style="-fx-background-color: #0D4715; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
            <Label text=" Hành động" style="-fx-font-size: 16px; -fx-text-fill: #EBE1D1; -fx-font-weight: bold;" />
            <Button text="Quét LAN" onAction="#onScanPeers"
                    style="-fx-background-color: linear-gradient(to bottom right, #16a085, #1abc9c);
               -fx-text-fill: #EBE1D1;
               -fx-font-weight: bold;
               -fx-background-radius: 12;
               -fx-padding: 8 16;
               -fx-cursor: hand;
               -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.2), 4, 0, 0, 2);" />

            <Button text="Kết nối" onAction="#onConnectPeer"
                    style="-fx-background-color: linear-gradient(to bottom right, #2980b9, #3498db);
               -fx-text-fill: #EBE1D1;
               -fx-font-weight: bold;
               -fx-background-radius: 12;
               -fx-padding: 8 16;
               -fx-cursor: hand;
               -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.2), 4, 0, 0, 2);" />

            <Button text="Ngắt" onAction="#onDisconnectPeer"
                    style="-fx-background-color: linear-gradient(to bottom right, #c0392b, #e74c3c);
               -fx-text-fill: #EBE1D1;
               -fx-font-weight: bold;
               -fx-background-radius: 12;
               -fx-padding: 8 16;
               -fx-cursor: hand;
               -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.2), 4, 0, 0, 2);" />

        </VBox>

        <!-- Phần còn lại: card info + table -->
        <VBox spacing="15" HBox.hgrow="ALWAYS">

            <!-- Card info LAN -->
            <VBox spacing="10" style="-fx-background-color: #0D4715; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                <HBox spacing="15" alignment="CENTER_LEFT">

                    <VBox>
                        <Label text="Mạng LAN" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #EBE1D1;" />

                    </VBox>
                    <Region HBox.hgrow="ALWAYS"/>
                </HBox>

                <Separator />

                <HBox spacing="5" alignment="CENTER_LEFT">
                    <Label text="Trạng thái:" style="-fx-font-weight: bold; -fx-text-fill: #EBE1D1;" />
                    <Label fx:id="peerStatusLabel" text="Đang chờ..." style="-fx-text-fill: #d6d0c3; -fx-font-style: italic;" />
                </HBox>
            </VBox>

            <!-- Table Peer -->
            <TableView fx:id="peerTable" VBox.vgrow="ALWAYS" style="-fx-background-color: #ffffff; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 2);">
                <columns>
                    <TableColumn  fx:id="colPeerName" text="Tên máy (Peer Name)" prefWidth="250" style="-fx-text-fill: #EBE1D1;-fx-alignment: CENTER; -fx-background-color: #0D4715; "/>
                    <TableColumn fx:id="colPeerIp" text="Địa chỉ IP" prefWidth="150" style="-fx-text-fill: #EBE1D1;-fx-alignment: CENTER; -fx-background-color: #0D4715; " />
                    <TableColumn fx:id="colPeerPort" text="Cổng (Port)" prefWidth="100" style="-fx-text-fill: #EBE1D1;-fx-alignment: CENTER;-fx-background-color: #0D4715;" />
                    <TableColumn fx:id="colPeerStatus" text="Trạng thái" prefWidth="150" style="-fx-text-fill: #EBE1D1;-fx-alignment: CENTER;-fx-background-color: #0D4715;" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <placeholder>
                    <Label text="Chưa có thiết bị nào" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;" />
                </placeholder>
            </TableView>

        </VBox>
    </HBox>

</AnchorPane>
